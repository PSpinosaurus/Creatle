@model IEnumerable<BusinessLayer.Answer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryValue.Value)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Date/ed/@item.CategoryId/@item.GameId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Date/det/@item.CategoryId/@item.GameId/d">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Date/del/@item.CategoryId/@item.GameId">Delete</a> |
            </td>
        </tr>
}
    </tbody>
</table>
